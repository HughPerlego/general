  summarise(Average_Conversion = round(mean(Conversion_Rate_Month), 1))

base_averages_stem_only <- 
  filter(Combined_Data, academic_discipline == 'STEM') %>%
  group_by(Price_Group) %>% 
  summarise(Average_Conversion = round(mean(Conversion_Rate_Month), 1))


